# CreatureGRC Environment Variables
# Copy to .env and fill in your values

# ============================================================================
# Zone 7: GRC Core Database
# ============================================================================
GRC_DB_NAME=grc_platform
GRC_DB_USER=grc_user
GRC_DB_PASSWORD=changeme_secure_password
GRC_DB_PORT=5432

# ============================================================================
# Zone 2: Security & Monitoring
# ============================================================================

# Wazuh SIEM/EDR
WAZUH_API_URL=https://wazuh.example.com:55000
WAZUH_USER=grc-collector
WAZUH_PASSWORD=changeme

# Tetragon eBPF Security
TETRAGON_API_URL=http://tetragon.example.com:2112

# Netbox IPAM/DCIM
NETBOX_API_URL=https://netbox.example.com
NETBOX_TOKEN=changeme

# Grafana
GRAFANA_API_URL=https://grafana.example.com
GRAFANA_TOKEN=changeme

# ============================================================================
# Zone 3: Secrets Management
# ============================================================================

# Infisical
INFISICAL_API_URL=https://infisical.example.com
INFISICAL_TOKEN=changeme

# Vaultwarden (not directly integrated, but for reference)
VAULTWARDEN_URL=https://vault.example.com

# ============================================================================
# Zone 4: AI Agent Stack
# ============================================================================

# LiteLLM (Multi-LLM Gateway)
LITELLM_API_URL=http://litellm.example.com:4000
LITELLM_API_KEY=changeme

# Temporal.io
TEMPORAL_HOST=temporal.example.com:7233
TEMPORAL_NAMESPACE=grc

# Obot
OBOT_API_URL=http://obot.example.com:9000
OBOT_TOKEN=changeme

# Langfuse (LLM Observability)
LANGFUSE_API_URL=https://langfuse.example.com
LANGFUSE_PUBLIC_KEY=pk-lf-changeme
LANGFUSE_SECRET_KEY=sk-lf-changeme

# LLM API Keys (used by LiteLLM)
ANTHROPIC_API_KEY=sk-ant-changeme
OPENAI_API_KEY=sk-changeme
GOOGLE_API_KEY=changeme

# ============================================================================
# Zone 5: Ticketing & Collaboration
# ============================================================================

# Jira/JSM
JIRA_URL=https://yourorg.atlassian.net
JIRA_EMAIL=grc@example.com
JIRA_API_TOKEN=changeme
JIRA_PROJECT=COMPLIANCE

# Confluence
CONFLUENCE_URL=https://yourorg.atlassian.net/wiki
CONFLUENCE_SPACE=GRC

# M365 Email (SMTP)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=grc@example.com
SMTP_PASSWORD=changeme
SMTP_FROM=grc@example.com

# ============================================================================
# Zone 6: Identity & Authentication
# ============================================================================

# Keycloak
KEYCLOAK_URL=https://auth.example.com
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=creaturegrc
KEYCLOAK_CLIENT_SECRET=changeme

# FreeIPA
FREEIPA_API_URL=https://ipa.example.com
FREEIPA_USER=grc-collector
FREEIPA_PASSWORD=changeme

# ============================================================================
# Zone 1: Development & Artifacts
# ============================================================================

# OneDev (Git Server)
ONEDEV_API_URL=https://git.example.com
ONEDEV_TOKEN=changeme

# Zot Registry (OCI)
ZOT_API_URL=https://registry.example.com
ZOT_USER=grc-collector
ZOT_PASSWORD=changeme

# ============================================================================
# CreatureGRC Configuration
# ============================================================================

# Primary LLM model (via LiteLLM)
PRIMARY_LLM_MODEL=claude-sonnet-4-20250514

# Cost limits
DAILY_LLM_COST_LIMIT_USD=100

# Evidence collection schedule
EVIDENCE_COLLECTION_CRON="0 2 * * *"  # Daily at 2 AM
